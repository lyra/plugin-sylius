<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Lyranetwork\Monetico\Repository\PaymentMethodRepositoryInterface"
                 class="Lyranetwork\Monetico\Repository\PaymentMethodRepository"
                 parent="sylius.repository.payment_method">
        </service>

        <service id="Lyranetwork\Monetico\Repository\OrderRepositoryInterface"
                 class="Lyranetwork\Monetico\Repository\OrderRepository"
                 parent="sylius.repository.order">
        </service>

        <service id="app.sylius_payment" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument>Lyranetwork\Monetico\Payum\SyliusPaymentGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="monetico_sylius_payment" />
        </service>

        <service id="Lyranetwork\Monetico\Form\Type\SyliusGatewayConfigurationType">
            <argument type="service" id="Lyranetwork\Monetico\Repository\PaymentMethodRepositoryInterface" />
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
            <tag name="sylius.gateway_configuration_type" type="monetico_sylius_payment" label="sylius_monetico_plugin.ui.monetico_payment_method_title" />
            <tag name="form.type" />
        </service>

        <service id="Lyranetwork\Monetico\ContextProvider\ConfigurationContextProvider" class="Lyranetwork\Monetico\ContextProvider\ConfigurationContextProvider">
            <tag name="sylius.ui.template_event.context_provider" />
        </service>

        <service id="Lyranetwork\Monetico\Service\ConfigService">
            <argument type="service" id="Lyranetwork\Monetico\Repository\PaymentMethodRepositoryInterface" />
        </service>

        <service id="Lyranetwork\Monetico\Service\OrderService">
            <argument type="service" id="Lyranetwork\Monetico\Repository\OrderRepositoryInterface" />
            <argument type="service" id="Sylius\Bundle\ShopBundle\EmailManager\OrderEmailManagerInterface" />
            <argument type="service" id="logger" />
        </service>

        <service id="Lyranetwork\Monetico\Service\RefundService">
            <argument type="service" id="Lyranetwork\Monetico\Sdk\RestData" />
            <argument type="service" id="Lyranetwork\Monetico\Service\ConfigService" />
            <argument type="service" id="Lyranetwork\Monetico\Sdk\RefundProcessor" />
        </service>

        <service id="Lyranetwork\Monetico\Sdk\RestData">
            <argument type="service" id="Lyranetwork\Monetico\Service\ConfigService" />
            <argument type="service" id="logger" />
            <argument type="service" id="router" />
            <argument type="service" id="sylius.repository.customer" />
            <argument type="service" id="request_stack" />
        </service>

        <service id="Lyranetwork\Monetico\Sdk\RefundProcessor" public="true">
            <argument type="service" id="logger" />
            <argument type="service" id="translator" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="sylius.manager.payment" />
            <argument key="$stateMachineFactory" type="service" id="sm.factory" />
        </service>

        <service id="sylius_monetico_plugin.twig.extension.smartform_provider" class="Lyranetwork\Monetico\Twig\Extensions\SmartformProvider">
            <argument type="service" id="logger" />
            <argument type="service" id="Lyranetwork\Monetico\Service\ConfigService" />
            <argument type="service" id="Lyranetwork\Monetico\Sdk\RestData" />
            <argument type="service" id="Lyranetwork\Monetico\Service\OrderService" />
            <argument type="service" id="sylius.context.currency" />
            <argument type="service" id="sylius.context.locale" />
            <argument key="$stateMachineFactory" type="service" id="sm.factory" />
            <tag name="twig.extension" />
        </service>

        <service id="Lyranetwork\Monetico\EventListener\AccountMenuListener">
            <argument type="service" id="Lyranetwork\Monetico\Repository\PaymentMethodRepositoryInterface" />
            <argument type="service" id="Lyranetwork\Monetico\Service\ConfigService" />
            <argument type="service" id="sylius.context.channel" />
            <tag name="kernel.event_listener" event="sylius.menu.shop.account" method="addAccountMenuItems" />
        </service>

        <service id="Lyranetwork\Monetico\Controller\CardController" public="true">
            <argument type="service" id="Lyranetwork\Monetico\Repository\PaymentMethodRepositoryInterface" />
            <argument type="service" id="sylius.repository.customer" />
            <argument type="service" id="sylius.context.customer" />
            <argument type="service" id="sylius.context.currency" />
            <argument type="service" id="Lyranetwork\Monetico\Sdk\RestData" />
            <argument type="service" id="router" />
            <argument type="service" id="twig" />
            <argument type="service" id="Lyranetwork\Monetico\Service\ConfigService" />
            <argument type="service" id="sylius.context.channel" />
            <tag name="controller.service_arguments" />
        </service>

        <service id="Lyranetwork\Monetico\Controller\RefundController" public="true">
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="logger" />
            <argument type="service" id="Lyranetwork\Monetico\Service\OrderService" />
            <argument type="service" id="Lyranetwork\Monetico\Service\RefundService" />
            <argument type="service" id="sylius.manager.payment" />
            <argument type="service" id="request_stack" />
            <argument key="$stateMachineFactory" type="service" id="sm.factory" />
        </service>

        <service id="Lyranetwork\Monetico\Controller\OrderController" public="true" parent="sylius.controller.order">
            <argument type="service" id="logger" />
            <argument type="service" id="Lyranetwork\Monetico\Sdk\RestData" />
            <argument type="service" id="Lyranetwork\Monetico\Service\ConfigService" />
            <argument type="service" id="Lyranetwork\Monetico\Service\OrderService" />
            <argument type="service" id="Lyranetwork\Monetico\Service\RefundService" />
            <argument type="service" id="Lyranetwork\Monetico\Repository\PaymentMethodRepositoryInterface" />
            <argument type="service" id="Sylius\Calendar\Provider\DateTimeProviderInterface" />
            <argument type="service" id="translator" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="router" />
            <argument key="$stateMachineFactory" type="service" id="sm.factory" />
        </service>
    </services>
</container>