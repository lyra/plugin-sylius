{% set moneticoFormConfig = monetico_get_config_info() %}

<div class="card mb-3">
    <h2 class="card-header">
        Monetico Retail
    </h2>
    <div class="row">
        <div class="m-2 col-3">
            {{ 'sylius_monetico_plugin.ui.monetico_developed_by'|trans }}
            <b><a href="https://www.lyra.com/" target="_blank" class="text-primary">Lyra Network</a></b>
        </div>
        <div class="m-2 col-8">
            {{ 'sylius_monetico_plugin.ui.monetico_support_email'|trans }}
            <b>{{ moneticoFormConfig.moneticoSupport | raw }}</b>
        </div>

        <div class="m-2 col-3">
            {{ 'sylius_monetico_plugin.ui.monetico_module_version'|trans }} <b>{{ moneticoFormConfig.moneticoPluginVersion }}</b>
        </div>
        <div class="m-2 col-4">
            {{ 'sylius_monetico_plugin.ui.monetico_gateway_version'|trans }} <b>{{ moneticoFormConfig.moneticoGatewayVersion }}</b>
        </div>
        <div class="m-2 col-12">
            {{ 'sylius_monetico_plugin.ui.monetico_documentation_link'|trans }}
            {% for lang, url in moneticoFormConfig.moneticoDocUrls %}
                <a style="margin-left: 10px; font-weight: bold; text-transform: uppercase;" href="{{ url }}" target="_blank" class="text-primary">{{ lang }}</a>
            {% endfor %}
        </div>
    </div>
</div>