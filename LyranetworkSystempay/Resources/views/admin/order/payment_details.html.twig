{% set payment = hookable_metadata.context.payment %}
{% set systempayGateway = constant('Lyranetwork\\Systempay\\Sdk\\Tools::FACTORY_NAME') %}

<td class="py-2">
    <strong {{ sylius_test_html_attribute('payment-method') }}>{{ payment.method.name }}</strong>
    {% if payment.details['systempay_factory_name'] is defined and payment.details['systempay_factory_name'] is same as (systempayGateway) %}
        <div id="systempayPaymentDetails">
            <p>
                {% if payment.details['systempay_trans_id'] is defined and payment.details['systempay_trans_id'] is not empty %}
                    {{ 'sylius_systempay_plugin.ui.transaction_id'|trans }}{{payment.details['systempay_trans_id']}}<br>
                {%endif%}
                {% if payment.details['systempay_trans_uuid'] is defined and payment.details['systempay_trans_uuid'] is not empty %}
                    {{ 'sylius_systempay_plugin.ui.transaction_uuid'|trans }}{{payment.details['systempay_trans_uuid']}}<br>
                {%endif%}
                {% if payment.details['systempay_card_brand'] is defined and payment.details['systempay_card_brand'] is not empty %}
                    {{ 'sylius_systempay_plugin.ui.card_brand'|trans }}{{payment.details['systempay_card_brand']}}
                {%endif%}
            </p>
        </div>
    {% endif %}
</td>