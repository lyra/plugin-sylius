{% set systempayFormConfig = systempay_get_config_info() %}

<div class="card mb-3">
    <h2 class="card-header">
        Systempay
    </h2>
    <div class="row">
        <div class="m-2 col-3">
            {{ 'sylius_systempay_plugin.ui.systempay_developed_by'|trans }}
            <b><a href="https://www.lyra.com/" target="_blank" class="text-primary">Lyra Network</a></b>
        </div>
        <div class="m-2 col-8">
            {{ 'sylius_systempay_plugin.ui.systempay_support_email'|trans }}
            <b>{{ systempayFormConfig.systempaySupport | raw }}</b>
        </div>

        <div class="m-2 col-3">
            {{ 'sylius_systempay_plugin.ui.systempay_module_version'|trans }} <b>{{ systempayFormConfig.systempayPluginVersion }}</b>
        </div>
        <div class="m-2 col-4">
            {{ 'sylius_systempay_plugin.ui.systempay_gateway_version'|trans }} <b>{{ systempayFormConfig.systempayGatewayVersion }}</b>
        </div>
        <div class="m-2 col-12">
            {{ 'sylius_systempay_plugin.ui.systempay_documentation_link'|trans }}
            {% for lang, url in systempayFormConfig.systempayDocUrls %}
                <a style="margin-left: 10px; font-weight: bold; text-transform: uppercase;" href="{{ url }}" target="_blank" class="text-primary">{{ lang }}</a>
            {% endfor %}
        </div>
    </div>
</div>