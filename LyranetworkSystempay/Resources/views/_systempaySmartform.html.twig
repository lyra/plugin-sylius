{% set methodCode = '' %}
{% if instanceCode is defined %}
    {% set methodCode = instanceCode %}
{% else %}
    {% set methodCode = method.code %}
{% endif %}

{% set systempayFormConfig = systempay_get_smartform_config(methodCode) %}

{% if order is defined %}
    {% set formToken, returnUrl, popin, dataEntryMode, logoHeader = systempay_get_smartform_token(order, methodCode).formToken, path('systempay_return_url'), '', '', '' %}
    {% set single = 'kr-single-payment-button' %}
    {% if systempayFormConfig.popinMode %}
        {% set popin = 'kr-popin' %}
        {% set single = '' %}
    {% endif %}

    {% if systempayFormConfig.cardDataEntryMode is same as('MODE_SMARTFORM_EXT_WITH_LOGOS') or systempayFormConfig.cardDataEntryMode is same as('MODE_SMARTFORM_EXT_WITHOUT_LOGOS') %}
        {% set dataEntryMode = 'kr-card-form-expanded' %}
    {% endif %}

    {% if systempayFormConfig.cardDataEntryMode is same as('MODE_SMARTFORM_EXT_WITHOUT_LOGOS') %}
        {% set logoHeader = 'kr-no-card-logo-header ' %}
    {% endif %}
{% elseif accountToken is not empty %}
    {% set formToken, returnUrl, popin, dataEntryMode, logoHeader, single = accountToken, path('systempay_sylius_account_saved_cards'), '', 'kr-card-form-expanded', '', '' %}
{% endif %}

<div id="systempayPaymentMethodForm">
    <script src="{{ systempayFormConfig.jsClient }}js/krypton-client/V4.0/stable/kr-payment-form.min.js"
        kr-public-key="{{ systempayFormConfig.pubKey }}"
        kr-language="{{ systempayFormConfig.language }}"
        kr-post-url-success="{{ returnUrl }}"
        kr-post-url-refused="{{ returnUrl }}"
    ></script>
    <link rel="stylesheet" href="{{ systempayFormConfig.jsClient }}js/krypton-client/V4.0/ext/{{ systempayFormConfig.theme }}-reset.css">
    <script src="{{ systempayFormConfig.jsClient }}js/krypton-client/V4.0/ext/{{ systempayFormConfig.theme }}.js"></script>

    <div class="kr-smart-form" {{ single }} {{ popin }} {{ dataEntryMode }} {{ logoHeader }} kr-form-token="{{formToken}}" style="z-index: 3; width: 100%;"></div>
    {% if order is defined %}
        <script>
            let redirectOnClose = "";
            function init() {
                const systempayCheckBox = $("input[type='radio'][value='{{ methodCode }}']");
                if (systempayCheckBox) {
                    configureSmartform();
                    togglePaymentMethodTitle();
                }
            }

            function togglePaymentMethodTitle() {
                const popin = '{{systempayFormConfig.popinMode}}' === '1';
                const nbMethod = $("input[type='radio']").length;
                const systempayCheckBox = $("input[type='radio'][value='{{ methodCode }}']");
                if (! popin && nbMethod == 1) {
                    $(".systempayPaymentChoiceTitle").each(function () {
                        this.style.setProperty('display', 'none', 'important')
                    });
                }

                systempayCheckBox.prop("checked", true);
            }

            function toggleSubmitButton(enabled) {
                const submitButton = $("form[name='sylius_checkout_select_payment'] button[type='submit']");
                submitButton.prop('disabled', !enabled);
            }

            async function handleButtonsDisplay() {
                const systempayCheckBox = $("input[type='radio'][value='{{ methodCode }}']");
                const smartform = $('#systempayPaymentMethodForm');

                if (systempayCheckBox.is(":checked")) {
                    smartform.show();
                } else {
                    smartform.hide();
                    if (redirectOnClose !== "") {
                        document.location.href = redirectOnClose;
                    }
                }
            }

            function openSmartform(event) {
                const popin = '{{systempayFormConfig.popinMode}}' === '1';
                let paymentForm = $('form[name="sylius_shop_checkout_select_payment"]');
                if (paymentForm.length < 1) {
                    paymentForm = $('form[name="sylius_checkout_select_payment"]');
                }
                const systempayCheckBox = $("input[type='radio'][value='{{ methodCode }}']");
                if (systempayCheckBox.is(":checked")) {
                    event.preventDefault();
                    toggleSubmitButton(false);
                    paymentForm.removeClass('loading');

                    // Refresh form token.
                    $.ajax({
                        type: 'POST',
                        url: '{{ path("systempay_rest_form_token") }}',
                        data: { 'orderIdDB': '{{ order.id }}', "instanceCode": '{{ methodCode }}' },
                        success: function(data) {
                            redirectOnClose = data.redirectOnClose;

                            KR.setFormConfig({
                                formToken: data.formToken
                            }).then(function(v) {
                                KR = v.KR;
                                if (popin) {
                                    KR.openPopin();
                                } else {
                                    KR.openSelectedPaymentMethod();
                                }
                            })
                        }
                    });
                }
            }

            function configureSmartform() {
                let paymentForm = $('form[name="sylius_shop_checkout_select_payment"]');
                if (paymentForm.length < 1) {
                    paymentForm = $('form[name="sylius_checkout_select_payment"]');
                }

                if ('{{systempayFormConfig.compactMode}}') {
                    KR.setFormConfig({ cardForm: { layout: "compact" }, smartForm: { layout: "compact" }});
                }

                KR.setFormConfig({
                    language: '{{systempayFormConfig.language}}',
                    form: { smartform: { singlePaymentButton: { visibility: false }}}
                });

                KR.onError(function() {
                    toggleSubmitButton(true);
                });

                KR.onPopinClosed(function() {
                    toggleSubmitButton(true)
                });

                paymentForm.on('submit', openSmartform);
                $("input[type='radio']").on('change', handleButtonsDisplay);
                KR.onFormReady(handleButtonsDisplay);
            }

            document.addEventListener("DOMContentLoaded", init, false);
        </script>

        <style>
            .kr-smart-form-modal-button, .kr-methods-list-card-form-wrapper .kr-card-form .kr-payment-button {
                display: none !important;
            }

            label.kr-method-label, label.kr-amount-label {
                margin: 0 !important;
                font-size: 13px !important;
            }
        </style>
    {% endif %}
</div>