<style>
    .payzenPaymentChoiceTitle {
        display: none !important;
    }
</style>

{% set payzenGateway = constant('Lyranetwork\\Payzen\\Payum\\SyliusPaymentGatewayFactory::FACTORY_NAME') %}

{% if method.gatewayConfig.factoryName is same as (payzenGateway) %}
    <div class="item payment-item payzenPaymentChoice" {{ sylius_test_html_attribute('payment-item') }}>
        <div class="field payzenPaymentChoiceTitle">
            <div class="ui radio checkbox payzenPaymentCheckBox" {{ sylius_test_html_attribute('payment-method-checkbox') }}>
                {{ form_widget(form, sylius_test_form_attribute('payment-method-select')) }}
            </div>
        </div>
        <div class="content">
            <a class="header payzenPaymentChoiceTitle">{{ form_label(form, null, {'label_attr': {'data-test-payment-method-label': ''}}) }}</a>
            {% include '@LyranetworkPayzenPlugin/_payzenSmartform.html.twig' %}
            {% if method.description is not null %}
                <div class="description">
                    <p>{{ method.description }}</p>
                </div>
            {% endif %}
        </div>
    </div>
{% else %}
    <div class="item payment-item" {{ sylius_test_html_attribute('payment-item') }}>
        <div class="field">
            <div class="ui radio checkbox" {{ sylius_test_html_attribute('payment-method-checkbox') }}>
                {{ form_widget(form, sylius_test_form_attribute('payment-method-select')) }}
            </div>
        </div>
        <div class="content">
            <a class="header">{{ form_label(form, null, {'label_attr': {'data-test-payment-method-label': ''}}) }}</a>
            {% if method.description is not null %}
                <div class="description">
                    <p>{{ method.description }}</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}